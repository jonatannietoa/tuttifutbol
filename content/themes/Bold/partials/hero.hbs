{{!
  - The hero area to be shown on the homepage.
  - This hero area will include:
    1. Cover Image
    2. Blog Description
}}

{{#is 'home'}}
  {{#if @blog.cover}}
  <div class='c-hero' style='background-image: url({{ @blog.cover }})'>
    <div class='c-hero__content'>
      <div class='c-hero__description'>{{{ @blog.description }}}</div>
    </div>
  </div>
  {{/if}}
{{/is}}