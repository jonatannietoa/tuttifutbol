{{!< default}}

{{#post}}

{{> post-hero }}

<div class='o-wrapper'>

  <div class='o-grid'>
    <div class='o-grid__col o-grid__col--center o-grid__col--3-4-m'>
      <article class='c-{{ post_class }}'>

        <div class='c-content'>
          {{ content }}
        </div>

        <div class='o-grid'>
          <div class='o-grid__col o-grid__col--full'>
            {{> share }}
          </div>
        </div>

        <hr>

        {{#if @labs.subscribers }}
          {{> subscribe-form }}
        {{/if}}

      </article>

    </div>
  </div>

</div>

{{/post}}

{{> related-posts}}
